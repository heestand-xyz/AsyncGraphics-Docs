{"abstract":[{"text":"Create a video player UI with a play \/ pause button and a slider as a time seeker.","type":"text"}],"identifier":{"url":"doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/VideoPlayback","interfaceLanguage":"swift"},"seeAlsoSections":[{"generated":true,"title":"Articles","identifiers":["doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/Blending","doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/Layout","doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/Camera","doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/VideoEditing"]}],"hierarchy":{"paths":[["doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics"]]},"primaryContentSections":[{"kind":"content","content":[{"type":"heading","anchor":"Overview","text":"Overview","level":2},{"type":"paragraph","inlineContent":[{"type":"text","text":"First we create a "},{"type":"reference","isActive":true,"identifier":"doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/GraphicVideoPlayer"},{"type":"text","text":". The video player takes a url and options. In this case we want the video to loop and be muted."}]},{"inlineContent":[{"text":"Then we create a ","type":"text"},{"code":"State","type":"codeVoice"},{"text":" for our current video ","type":"text"},{"isActive":true,"identifier":"doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/Graphic","type":"reference"},{"type":"text","text":". Then in the "},{"code":"body","type":"codeVoice"},{"text":" we add the graphic with ","type":"text"},{"type":"reference","identifier":"doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/GraphicView","isActive":true},{"text":".","type":"text"}],"type":"paragraph"},{"inlineContent":[{"text":"In the bottom of the ","type":"text"},{"type":"codeVoice","code":"VStack"},{"text":" we add an ","type":"text"},{"code":"HStack","type":"codeVoice"},{"text":" with a play button and a seek slider.","type":"text"}],"type":"paragraph"},{"inlineContent":[{"type":"text","text":"The button will just toggle between playing and pausing the video."}],"type":"paragraph"},{"type":"paragraph","inlineContent":[{"type":"text","text":"The slider will seek with a binding of the current time and the "},{"type":"codeVoice","code":"videoPlayer.seek(to:)"},{"type":"text","text":" func."}]},{"name":"Note","content":[{"type":"paragraph","inlineContent":[{"text":"Note that the slider is disabled during playback. To properly use seek, please call ","type":"text"},{"code":"videoPlayer.seekStart()","type":"codeVoice"},{"text":" and ","type":"text"},{"type":"codeVoice","code":"videoPlayer.seekEnd()"},{"type":"text","text":"."}]}],"type":"aside","style":"note"},{"inlineContent":[{"type":"text","text":"In the bottom of our "},{"code":"body","type":"codeVoice"},{"type":"text","text":" we add a task, this will render the video frames."}],"type":"paragraph"},{"code":["import SwiftUI","import AsyncGraphics","","struct ContentView: View {","   ","    @StateObject private var videoPlayer: GraphicVideoPlayer = {","        let url = Bundle.main.url(forResource: \"Video\", withExtension: \"mov\")!","        var options = GraphicVideoPlayer.Options()","        options.loop = true","        options.volume = 0.0","        return GraphicVideoPlayer(url: url, options: options)","    }()","    ","    @State private var graphic: Graphic?","    ","    var body: some View {","        VStack {","            ","            if let graphic {","                GraphicView(graphic: graphic)","            }","            ","            HStack {","                ","                Button {","                    if videoPlayer.playing {","                        videoPlayer.pause()","                    } else {","                        videoPlayer.play()","                    }","                } label: {","                    Image(systemName: videoPlayer.playing ? \"pause.fill\" : \"play.fill\")","                }","                ","                Slider(value: Binding(get: {","                    videoPlayer.seconds","                }, set: { second in","                    videoPlayer.seek(to: second)","                }), in: 0.0...(videoPlayer.info?.duration ?? 1.0))","                .disabled(videoPlayer.playing)","            }","        }","        .padding()","        .task {","            do {","                try await videoPlayer.setup()","                for await videoGraphic in Graphic.playVideo(with: videoPlayer) {","                    self.graphic = videoGraphic","                }","            } catch {","                print(\"Video player setup failed:\", error)","            }","        }","    }","}"],"type":"codeListing","syntax":"swift"},{"type":"aside","name":"Note","style":"note","content":[{"inlineContent":[{"text":"You can also use the ","type":"text"},{"type":"reference","identifier":"doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/AGVideo","isActive":true},{"text":" then you don’t need the graphic State or the task with the for loop.","type":"text"}],"type":"paragraph"}]},{"code":["AGView {","    AGVideo(with: videoPlayer)","        .resizable()","        .aspectRatio(contentMode: .fit)","}"],"syntax":"swift","type":"codeListing"}]}],"variants":[{"paths":["\/documentation\/asyncgraphics\/videoplayback"],"traits":[{"interfaceLanguage":"swift"}]}],"metadata":{"title":"Video Playback","role":"collectionGroup","modules":[{"name":"AsyncGraphics"}]},"schemaVersion":{"major":0,"minor":3,"patch":0},"kind":"article","sections":[],"topicSections":[{"identifiers":["doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/AGVideo","doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/GraphicVideoPlayer","doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/Graphic\/playVideo(with:)","doc:\/\/AsyncGraphics\/documentation\/AsyncGraphics\/Graphic\/playVideo(url:loop:volume:)"],"title":"Video"}],"references":{"doc://AsyncGraphics/documentation/AsyncGraphics/Layout":{"abstract":[{"text":"Layout graphics with stacks, frames and padding.","type":"text"}],"url":"\/docum